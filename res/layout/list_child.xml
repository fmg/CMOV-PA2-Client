<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_child_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:paddingTop="10dp" android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/list_child_image"
        android:layout_width="70px"
        android:layout_height="70px"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/list_child_bedrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_child_image"
        android:text="TX"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/list_child_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_child_bedrooms"
        android:layout_toRightOf="@+id/list_child_image"
        android:text="City"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/list_child_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_child_bedrooms"
        android:layout_toRightOf="@+id/list_child_city"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="20dp"/>

</RelativeLayout>